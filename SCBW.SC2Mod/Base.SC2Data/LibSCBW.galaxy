    string auto66859ACD_val;

    // Variable Initialization

    // Actions
    if (!runActions) {
        return true;
    }

    auto52EFDCBD_g = PlayerGroupActive();
    lv_playerIndex = -1;
    while (true) {
        lv_playerIndex = PlayerGroupNextPlayer(auto52EFDCBD_g, lv_playerIndex);
        if (lv_playerIndex < 0) { break; }
